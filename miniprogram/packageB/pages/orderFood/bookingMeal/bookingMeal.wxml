<!--miniprogram/packageB/pages/orderFood/bookingMeal/bookingMeal.wxml-->
<view class="wrap">
  <view class="whiteBg">
    <van-cell-group>
      <van-field value="{{ info.username }}" required label="姓名" placeholder="请输入姓名" />
      <van-field required value="{{ info.phone }}" label="手机号" placeholder="请输入手机号" />
      <van-field value="{{ info.number }}" required label="就餐人数" placeholder="请输入" />
      <van-field value="{{ info.time }}" required readonly label="就餐时间" placeholder="请选择" bindtap="selectedTime" />
    </van-cell-group>
  </view>

  <van-popup show="{{ popupShow }}" round position="bottom" custom-style="height: 50%" bind:close="onClose">
    <van-datetime-picker type="datetime" value="{{ currentDate }}" min-date="{{ minDate }}" max-date="{{ maxDate }}" bind:input="onInput" bind:formatter="formatter" bind:cancel="show = false" bind:confirm="confirmPicker" />
  </van-popup>
</view>

<van-button type="primary" round block>预订</van-button>