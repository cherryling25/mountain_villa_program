/* pages/home/orderFood/orderFood.wxss */
.wrap{
  display: flex;
  justify-content: space-between;
}

.van-card {
  border-bottom: 10rpx solid #eaebec;
  padding: var(--card-padding,8px 33px) !important;
}
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  width: 80%;
  border-radius: 15rpx;
  background-color: #fff;
  border: 1px solid #0ab955;
  text-align: center;
  padding: 10rpx 0;
}
.blockTitle{
  color: gray;
  font-weight: bold;
}
.blockContent{
  padding: 45rpx 0 10rpx 0; 
}
.blockTip{
  font-size: 26rpx;
  padding: 10rpx 0 30rpx 0;
  color: gray;
}
.blockBtn{
  display: flex;
  justify-content: space-around;
}


/*图片*/
.img {
  width: 750rpx;
  height: 330rpx;
}

/*预定餐位*/
.title{
  margin: 15rpx auto 0 auto;
  width: 150rpx;
  border: 0px solid red;
}


.weui-flex{
  margin: 15rpx 0;
}

.title1{
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.content{
  width: 340rpx;
  border: 0px solid red;
  font-size: 0;
  margin: 5rpx auto;
}

.flex1_img{
  width: 100%;
  height: 250rpx;
  border-radius: 5px;
  border: 0px solid green;

}

.text{
  margin: 10rpx 0 5rpx 140rpx;
}

.btn{
  width: 45%;
  text-align: center;
  margin-left: 100rpx;
  height: 50rpx;
  border-radius: 20px;
  color: white;
  background:linear-gradient(#2980B9,#6DD5FA);
  margin-bottom: 20rpx;
  border: 0px solid red;
}

.btn1{
  width: 50%;
  text-align: center;
  margin-left: 100rpx;
  height: 50rpx;
  border-radius: 20px;
  color: white;
  background-color:rgb(220, 221, 221);
  margin-bottom: 20rpx;
  border: 0px solid red;
}
