<!--pages/service/orderFood/orderFoodInformation/orderFoodInformation.wxml-->
<view class="wrap">
  <view class="menu" wx:for="{{menu}}" wx:key="index">
    <view>
      <view>{{item.title}}</view>
      <view style="margin-top:5rpx;">¥ {{item.price}}</view>
    </view>
    <view class="stepper">
      <van-stepper value="{{ 1 }}" bind:change="onChange" />
    </view>
  </view>

</view>

<van-popup 
  show="{{ popupShow }}"
  round
  position="bottom"
  custom-style="height: 50%"
  bind:close="onClose"
>
<van-datetime-picker
  type="datetime"
  value="{{ currentDate }}"
  min-date="{{ minDate }}"
  max-date="{{ maxDate }}"
  bind:input="onInput"
  bind:formatter="formatter"
  bind:cancel="show = false"
  bind:confirm="confirmPicker"
/>
</van-popup>

<van-goods-action>
  <van-goods-action-icon text="总计：" bind:click="onClickIcon" text-class="text"/>
  <van-goods-action-icon text="¥ 123.00" bind:click="onClickIcon" text-class="text"/>
  <van-goods-action-button color="#be99ff" text="预订" type="warning" bind:click="booking"/>
  <van-goods-action-button color="#7232dd" text="立即下单" bind:click="onClickButton"/>
</van-goods-action>

