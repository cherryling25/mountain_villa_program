<!--pages/myPage/booking.wxml-->

<view class="swiper-tab">

  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">
  <image class="img" src="../../images/all.png"></image>全部</view>

  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">
  <image class="img" src="../../images/wait.png"></image>待付款</view>

  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">
  <image class="img" src="../../images/underway.png"></image>处理中</view>

  <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav"><image class="img" src="../../images/finish.png"></image>已完成</view>

</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" 
  style="height:{{winHeight - 31}}px" bindchange="bindChange">

  <swiper-item>
      <!--全部订单-->
      <view class="order-cells1" wx:if="{{msgData.length==0}}">
      <image src="/images/no_order.png"></image>
        <view class="text">
          您还没有相关订单哦！
        </view>
      </view>

      <view class="weui-cells">
          <view class="weui-cell" wx:for='{{msgData}}' wx:key='{{index}}' data-data="{{item}}">
              <view class="weui-cell__ft">
              {{item.name}} : 
              <text style="padding-right:50rpx;"></text>{{item.number}}</view>
          </view>
          <view class="weui-cell__ft last">{{state}}</view>
      </view>
  </swiper-item>


  <swiper-item>
  <!--待付款订单-->
    <view class="order-cells1">
    <image src="/images/no_order.png"></image>
      <view class="text">
        您还没有相关订单哦！
      </view>
    </view>
  </swiper-item>

  <swiper-item>
    <view>处理中</view>
  </swiper-item>

  <swiper-item>
    <view>已完成</view>
  </swiper-item>

</swiper>

