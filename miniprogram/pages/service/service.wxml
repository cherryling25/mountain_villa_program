<!--pages/service/service.wxml-->
<!--轮播-->
<view class="weui-padding-wrap">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="index" class="img_content">
      <swiper-item>
        <image src="{{item}}" class="slide-image" class="img" />
      </swiper-item>
    </block>
  </swiper>
</view>

<!--图标-->
<view class="weui-flex">
  <view class="weui-flex__item">
    <view class="placeholder">
    <navigator url="../../packageB/pages/orderFood/orderFood">
      <image src="../../images/order_food.png" class="flex_img"></image>
      <span> 订 餐</span> 
      </navigator>
    </view>
  </view>

  <view class="weui-flex__item">
    <view class="placeholder">
    <navigator url="../../packageB/pages/orderRoom/orderRoom">
     <image src="../../images/order_room.png" class="flex_img"></image>
    <span> 订 房</span> 
    </navigator>
    </view>
  </view>
  
  <view class="weui-flex__item">
    <view class="placeholder">
    <navigator url="../../packageB/pages/receiveCoupon/receiveCoupon">
     <image src="../../images/home_coupon.png" class="flex_img"></image>
    <span>优惠劵</span>
    </navigator> 
    </view>
  </view>
</view>

<!--故事集-->
<view wx:for="{{stories}}" wx:key="index">
  <view class="title">{{item.title}}</view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <view class="content">
      <navigator url="{{item.url}}">
        <image src="{{item.src}}" class="flex1_img"></image>
        </navigator>
      </view>
    </view>
  </view>
</view>

